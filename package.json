{
    "name": "@stylify/packages",
    "version": "0.0.1",
    "description": "Stylify monorepo",
    "author": "Vladimír Macháček",
    "license": "MIT",
	"main": "index.js",
	"type": "module",
    "scripts": {
        "repo-init": "yarn install && yarn link && yarn bootstrap",
		"bootstrap": "lerna bootstrap --force-local",
		"watch": "node --max-old-space-size=8192 node_modules/.bin/lerna run --parallel --concurrency=2 watch ",
		"build": "node --max-old-space-size=8192 node_modules/.bin/lerna run --parallel --concurrency=2 build",
		"stylify:build": "node --max-old-space-size=8192 node_modules/.bin/yarn build --scope=@stylify/stylify",
		"stylify:watch": "node --max-old-space-size=8192 node_modules/.bin/yarn watch --scope=@stylify/stylify",
		"nuxtmodule:build": "node --max-old-space-size=8192 node_modules/.bin/yarn build --scope=@stylify/nuxt-module",
		"nuxtmodule:watch": "node --max-old-space-size=8192 node_modules/.bin/yarn watch --scope=@stylify/nuxt-module",
		"nuxtmodule:plg:start": "lerna run playground:start --scope=@stylify/nuxt-module",
		"lint:check": "lerna run lint:check",
		"jest:test": "lerna run jest:test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stylify/packages.git"
    },
    "keywords": [

    ],
    "bugs": {
        "url": "https://github.com/stylify/packages/issues"
    },
    "homepage": "https://github.com/stylify/packages/#readme",
    "devDependencies": {
        "lerna": "^3.22.1"
    }
}
