{
	"name": "@stylify/bundler",
	"version": "0.5.31",
	"description": "CSS bundler for @stylify/stylify.",
	"keywords": [
		"stylify",
		"ui",
		"css",
		"sass",
		"mobile-first",
		"responsive",
		"front-end",
		"framework",
		"web"
	],
	"homepage": "https://stylifycss.com",
	"bugs": {
		"url": "https://github.com/stylify/packages/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stylify/packages.git",
		"directory": "packages/bundler"
	},
	"license": "MIT",
	"author": "Vladimír Macháček",
	"exports": {
		".": {
			"import": "./esm/index.mjs",
			"require": "./lib/index.cjs",
			"types": "./types/*"
		},
		"./types/*": "./types/*",
		"./package.json": "./package.json"
	},
	"main": "lib/index.cjs",
	"module": "esm/index.mjs",
	"types": "types",
	"files": [
		"esm",
		"lib",
		"types",
		"package.json",
		"LICENSE",
		"README.md"
	],
	"dependencies": {
		"@stylify/stylify": "workspace:^",
		"autoprefixer": "^10.4",
		"chokidar": "^3.5",
		"fast-glob": "^3.2",
		"micromatch": "^4.0",
		"normalize-path": "^3.0",
		"postcss": "^8.4"
	}
}
